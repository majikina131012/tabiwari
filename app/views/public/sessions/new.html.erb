<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
          <h2 class="h5 mb-0">ログイン</h2>
        </div>
        <div class="card-body">
          <%= form_with model: @user, url: user_session_path, local: true do |f| %>

            <div class="form-group">
              <%= f.label :name, "ユーザー名" %>
              <%= f.text_field :name, class: "form-control", autofocus: true %>
            </div>

            <div class="form-group">
              <%= f.label :password, "パスワード" %>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-check mb-3">
                <%= f.check_box :remember_me, class: "form-check-input", id: "remember_me" %>
                <%= f.label :remember_me, "ログイン情報を記憶する", class: "form-check-label" %>
              </div>
            <% end %>

            <div class="form-group">
              <%= f.submit "ログイン", class: "btn btn-info btn-block" %>
            </div>

          <% end %>

          <div class="text-center">
            <%= link_to "新規登録はこちら", new_user_registration_path, class: "btn btn-link" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

