<div class='row'>
  <% if user_signed_in? %>

    <% @groups.each do |group| %>
      <%= link_to group_path(group.id), class: 'btn btn-light btn-lg' do %>
        <%= group.name %>で割り勘を始める
      <% end %>
    <% end %>
</div>

<div class='row'>

    <%= link_to "グループを作成する", new_group_path, class: 'btn btn-info btn-lg mr-4' %>
    <%= link_to "グループ一覧", groups_path, class: 'btn btn-info btn-lg' %>


  <% else %>
  <h1>ログインしてください</h1>
  <% end %>
</div>