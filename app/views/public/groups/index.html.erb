<div class="container mt-4">
  <h2 class="mb-4">グループ一覧</h2>
  <% if @groups.any? %>
    <div class="row">
      <% @groups.each do |group| %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card h-100">
            <div class="card-body d-flex flex-column justify-content-between">
              <h5 class="card-title"><%= group.name %></h5>
              <div class="mt-3">
                <%= link_to '詳細を見る', group_path(group), class: 'btn btn-primary btn-block mb-2' %>
                <%= link_to "#{group.name} を削除する", group_path(group.id), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger btn-block' %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted">グループはまだ作成されていません。</p>
  <% end %>
</div>
