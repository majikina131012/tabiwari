<%= form_with model: @group, local: true, html: { class: "needs-validation" } do |f| %>
  <div class="form-group">
    <%= f.label :name, "グループ名", class: "form-label" %>
    <%= f.text_field :name, class: "form-control", required: true %>
  </div>
  <div class="form-group">
    <%= f.submit "作成する", class: "btn btn-primary btn-block" %>
  </div>
<% end %>